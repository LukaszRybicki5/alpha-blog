<%= render 'shared/errors', obj: @article %>

<div class = "row">
    <div class = 'col-xs-12'>
<%= form_for @article, :html => {class: "form-horizontal", role: "form"} do |f|%>
</div>
<div class = "form-group">
    <div class = "controll-label col-sm-2">

    <%= f.label :title %>
    </div>
    <div class=:"col-sm-8">
    <%= f.text_field :title, class: "form-controll", placeholder: "Tytuł artykułu!!!!", autofocus: true %>
    </div>
    <div class = "form-group">
    <div class = "controll-label col-sm-2">
        <%= f.label :description %>
        </div>
         <div class=:"col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Opis artykułu" %>
</div>
</div>
<div class="form-group">
    <div class= "col-sm-10">
    <%= f.submit class:'btn btn-primary btn-lg' %>
    </div>
    </div>



    <div class= "col-xs-4 col-xs-offset-4">
        
[ <%= link_to "Wróc do listy artykułów!!!", articles_path %>]
 </div>
 </div>
 <% end %>